{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["jest", "node"]
  },
  "include": ["./src/**/*", "./src/*.ts"]
}
